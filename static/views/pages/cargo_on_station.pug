extends ../layout.pug

block prepend styles
  link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
  div(class='breadcrumb')
    li= title
  form(id='cargo_on_station-add-form' name='cargo_on_station-add-form' class='form-inline' action='')

    input(id='id' name='id' value='' class='form-control' type='hidden')
    p(class='text-danger' id='error-text')

    div(class='form-group')
      div(class='col-md-3')
        label(for='id') Space Station
      div(class='col-md-9')
        input(id='space_station' name='space_station' value='' class='form-control')

    div(class='form-group')
      div(class='col-md-3')
        label(for='id') Cargo
      div(class='col-md-9')
        input(id='cargo' name='cargo' value='' class='form-control')

    div(class='form-group')
      div(class='col-md-12')
        button(id="form-button" type='submit' class='btn btn-primary') Create
    div(class='form-group')
      div(class='col-md-12')
        button(id='update' type='submit' class='btn btn-primary hidden') Оновити
    div(class='form-group')
      div(class='col-md-12')
        button(id='delete' class='btn btn-primary hidden') Видалити

    div.list-wrapper
      table(id='cargo_on_station-list')

block append scripts
  script(src='/static/js/models/cargo_on_station.js')
  script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script(src='/static/js/views/cargo_on_station.js')
